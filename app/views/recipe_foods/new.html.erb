<% if session[:current_recipe].nil? %>
  <h1>New recipe food</h1>
<% else %>
  <h1>Add new food to the <%= session[:current_recipe]['name'] %> recipe</h1>
<% end %>

<%= render "form", recipe_food: @recipe_food %>

<br>

<div>
  <% if session[:current_recipe].nil? %>
    <%= link_to "Back to recipe foods", recipe_foods_path %>
  <% else %>
    <%= link_to "Back to recipe", recipe_path(session[:current_recipe]['id']) %>
  <% end %>
</div>
