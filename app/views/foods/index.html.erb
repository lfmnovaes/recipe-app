<p style="color: green"><%= notice %></p>

<div class="title-container flex">
  <h1>Foods</h1>
  <%= button_to "New food", new_food_path, method: :get %>
</div>

<% unless @foods.empty? %>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Measurement Unit</th>
        <th>Price</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @foods.each do |food| %>
        <tr>
          <td><%= food.name%></td>
          <td><%= food.measurement_unit%></td>
          <td>$ <%= food.price%></td>
          <% if can? :manage, food%>
            <td><%= link_to "Delete", food %></td>
          <% else %>
            <td> - </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No foods available</p>
<% end %>
